<div class="max-w-2xl mx-auto">
  <div class="bg-white shadow-sm border border-gray-200 rounded-xl overflow-hidden">
    <div class="px-6 py-6 bg-gradient-to-r from-rose-50 to-white border-b border-gray-100">
      <div class="flex items-center gap-3">
        <div class="flex h-10 w-10 items-center justify-center rounded-full bg-red-100 text-red-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor"><path fill-rule="evenodd" d="M21.707 20.293 13.414 2.586A2 2 0 0 0 11.618 1.5h-.003a2 2 0 0 0-1.796 1.086L1.525 20.293A2 2 0 0 0 3.3 23h17.4a2 2 0 0 0 1.007-2.707ZM11 8a1 1 0 0 1 2 0v6a1 1 0 1 1-2 0V8Zm1 9a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3Z" clip-rule="evenodd"/></svg>
        </div>
        <div>
          <h1 class="text-xl sm:text-2xl font-semibold text-gray-900">Something went wrong</h1>
          <p class="text-sm text-gray-500 mt-1">Please review the information below.</p>
        </div>
      </div>
    </div>

    <div class="px-6 py-6 space-y-4">
      <% if (typeof error !== 'undefined' && error) { %>
        <div class="rounded-md bg-gray-50 border border-gray-200">
          <div class="px-4 py-2 border-b border-gray-200 text-sm font-medium text-gray-700">Details</div>
          <pre class="px-4 py-3 text-sm text-gray-800 overflow-auto"><%= error %></pre>
        </div>
      <% } %>

      <div class="flex flex-col sm:flex-row gap-3 pt-2">
        <a href="/app" class="inline-flex justify-center items-center gap-2 px-4 py-2 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-300">
          Go to Home page
        </a>
      </div>
    </div>
  </div>
</div>
